<nav class="main-navigation">
    <ul class="nav-list">
        {% for item in site.navigation %}
        <li class="nav-item">
            <a href="{{ item.url }}" class="nav-link{% if page.url == item.url %} nav-link--active{% endif %}">
                {{ item.text }}
            </a>
        </li>
        {% endfor %}
    </ul>
</nav>
