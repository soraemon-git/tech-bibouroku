---
pagination:
  data: categories
  size: 1
  alias: categoryData
layout: base.njk
permalink: "{{ categoryData.permalink }}"
eleventyComputed:
  title: "{{ categoryData.title }}"
  description: "{{ categoryData.description }}"
showLeftSidebar: false
showRightSidebar: false
---

<div class="content-wrapper">
  <main class="main-content">
    <div class="blog-header">
      <h1>{{ categoryData.name }}の記事</h1>
      <p>{{ categoryData.description }}</p>
    </div>

    <div class="blog-posts">
      {% set categoryPosts = posts | selectattr('category', 'equalto', categoryData.name) %}
      
      {% if categoryPosts | length > 0 %}
        <div class="posts-list">
          {% for post in categoryPosts %}
            <article class="post-item">
              <h2 class="post-item__title">
                <a href="{{ post.url }}">{{ post.title }}</a>
              </h2>
              
              <p class="post-item__excerpt">{{ post.excerpt }}</p>
              
              <div class="post-item__meta">
                <span class="post-item__category">{{ post.category }}</span>
                <time class="post-item__date" datetime="{{ post.publishDate }}">
                  {{ post.publishDate | dateFormat }}
                </time>
              </div>
              
              <a href="{{ post.url }}" class="read-more">
                続きを読む
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="no-posts">
          <h3>まだ記事がありません</h3>
          <p>{{ categoryData.name }}カテゴリーの記事は準備中です。しばらくお待ちください。</p>
          <a href="/blog/" class="read-more">すべての記事を見る</a>
        </div>
      {% endif %}
    </div>
  </main>
</div>

<style>
.no-posts {
  text-align: center;
  padding: var(--spacing-3xl) var(--spacing-lg);
  background-color: var(--color-background-light);
  border-radius: var(--border-radius-lg);
  margin: var(--spacing-xl) 0;
}

.no-posts h3 {
  color: var(--color-text-light);
  margin-bottom: var(--spacing-md);
}

.no-posts p {
  color: var(--color-text-light);
  margin-bottom: var(--spacing-lg);
}
</style>
